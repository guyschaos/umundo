  if (MSVC)
	set(PTHREAD_LIB_NAME pthreadVC2)
  elseif(MINGW)
	set(PTHREAD_LIB_NAME pthreadGC2)
  endif()
endif()

FIND_LIBRARY(PTHREAD_LIBRARY 
  NAMES ${PTHREAD_LIB_NAME}
  HINTS
  $ENV{PTHREAD_LIB_DIR}
  PATHS
  ${PTHREAD_PREBUILT}
)

