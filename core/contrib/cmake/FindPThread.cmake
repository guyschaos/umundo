SET(PTHREAD_PREBUILT ${CONTRIB_PREBUILT}/pthread/${CMAKE_SYSTEM_NAME_LC}-${CMAKE_SYSTEM_PROCESSOR}/${CMAKE_CXX_COMPILER_ID_LC})

FIND_PATH(PTHREAD_INCLUDE_DIR pthread.h
  HINTS
  $ENV{PTHREADDIR}
  PATHS
  ${CONTRIB_HEADERS}/pthread # the headers we distribute
)

